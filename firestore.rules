
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile documents
    match /users/{userId} {
      // Users can create their own profile document (handled by the cloud function now)
      // This rule is simplified as the server function is the writer.
      allow create: if request.auth != null && request.auth.uid == userId;

      // A user can read their own profile. Admins can read any profile.
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // A user can update their own profile, but not their role. Admins can update any profile.
      allow update: if request.auth != null && (
                    (request.auth.uid == userId && !('role' in request.resource.data)) ||
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                  );
    }
    
    match /leads/{leadId} {
      allow read, write: if request.auth != null;
    }
    
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /operationalCases/{caseId} {
      allow read, write: if request.auth != null;
    }
  }
}

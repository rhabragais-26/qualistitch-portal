
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile documents
    match /users/{userId} {
      // Admins can perform any action on any user document.
      allow read, list, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Users can create their own profile.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    match /leads/{leadId} {
      allow read: if request.auth != null || resource.data.publiclyPrintable == true;
      allow write: if request.auth != null;
    }
    
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /operationalCases/{caseId} {
      allow read, write: if request.auth != null;
    }

    match /sizeCharts/{chartId} {
      allow read, write: if true;
    }
    
    match /pricing/{configId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /direct_messages/{channelId} {
      // Allow read/write only if the requesting user is a participant
      allow read, write: if request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        // Allow read if user is a participant
        allow read: if get(/databases/$(database)/documents/direct_messages/$(channelId)).data.participants[0] == request.auth.uid || get(/databases/$(database)/documents/direct_messages/$(channelId)).data.participants[1] == request.auth.uid;
        // Allow create if user is the sender and is a participant
        allow create: if request.resource.data.senderId == request.auth.uid && (get(/databases/$(database)/documents/direct_messages/$(channelId)).data.participants[0] == request.auth.uid || get(/databases/$(database)/documents/direct_messages/$(channelId)).data.participants[1] == request.auth.uid);
      }
    }

    match /appState/{stateId} {
      allow read, write: if request.auth != null;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User profile documents
    match /users/{userId} {
      // Admins can perform any action on any user document.
      allow read, list, write: if isAdmin();
      
      // Users can create their own profile.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/personalCalendar/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /leads/{leadId} {
      allow read: if request.auth != null || resource.data.publiclyPrintable == true;
      allow write: if request.auth != null;
    }

    match /unclosedLeads/{unclosedLeadId} {
      allow read, write: if request.auth != null;
    }
    
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /operationalCases/{caseId} {
      allow read, write: if request.auth != null;
    }

    match /sizeCharts/{chartId} {
      allow read, write: if true;
    }
    
    match /pricing/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /direct_messages/{channelId} {
      // Admins can perform any operation. Other users can only access their own channels.
      allow read, write: if isAdmin() || (request.auth.uid in resource.data.participants);
      
      match /messages/{messageId} {
         // Admins can do anything. Others can only access messages in their channels.
        allow read, write: if isAdmin() || get(/databases/$(database)/documents/direct_messages/$(channelId)).data.participants[0] == request.auth.uid || get(/databases/$(database)/documents/direct_messages/$(channelId)).data.participants[1] == request.auth.uid;
      }
    }

    match /appState/{stateId} {
      allow read, write: if request.auth != null;
    }

    match /dailyAds/{adId} {
      allow read, write: if request.auth != null;
    }

    match /campaign_inquiries/{inquiryId} {
      allow read, write: if request.auth != null;
    }
    
    match /ad_spend_inquiries/{inquiryId} {
      allow read, write: if request.auth != null;
    }
    
    match /other_cash_inflows/{inflowId} {
      allow read, write: if request.auth != null;
    }

    match /adCampaigns/{campaignId} {
      allow read, write: if request.auth != null;
    }

    match /marketingCalendar/{eventId} {
      allow read, write: if request.auth != null;
    }

    match /operational_expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }

    match /cost_of_goods/{cogsId} {
      allow read, write: if request.auth != null;
    }

    match /capital_expenses/{capitalExpenseId} {
      allow read, write: if request.auth != null;
    }

    match /embroidery_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}

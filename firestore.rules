rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write only to their own document in the 'users' collection
    match /users/{userId} {
      allow get, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Allow any authenticated user to read and write to other collections
    match /leads/{leadId} {
      allow read, write: if request.auth != null;
    }
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }
    match /operationalCases/{caseId} {
        allow read, write: if request.auth != null;
    }
  }
}

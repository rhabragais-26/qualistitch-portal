rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User profile documents
    match /users/{userId} {
      allow read, write: if request.auth != null
                          && request.auth.uid == userId;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

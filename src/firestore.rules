
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile documents
    match /users/{userId} {
      // Allow users to create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;
      // Admins can read any profile, users can only read their own.
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // Admins can update any profile, users can only update their own.
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      // Only admins can delete user profiles.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /leads/{leadId} {
      allow read, write: if request.auth != null;
    }
    
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /operationalCases/{caseId} {
      allow read, write: if request.auth != null;
    }
  }
}
